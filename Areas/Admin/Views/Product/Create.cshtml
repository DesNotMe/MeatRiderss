@model Product

<div class="card shadow broder-0 mt 4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>

            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                </div>
                <!--<div asp-validation-summary="ModelOnly"></div>--> <!--All or None or ModelOnly-->

                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label> 
            
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductCode" class="form-control border-0 shadow" />
                    <label asp-for="ProductCode" class="ms-2"></label>

                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Country" class="form-control border-0 shadow" />
                    <label asp-for="Country" class="ms-2"></label>

                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>

                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price500" class="form-control border-0 shadow" />
                    <label asp-for="Price500" class="ms-2"></label>

                    <span asp-validation-for="Price500" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price1000" class="form-control border-0 shadow" />
                    <label asp-for="Price1000" class="ms-2"></label>

                    <span asp-validation-for="Price1000" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">

                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>

                        
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>


<!--Javascript codes Client side validation-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}